{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",       // ← THIS IS THE KEY
    "strict": true,
    "esModuleInterop": true,
     "resolveJsonModule": true,   // ← THIS IS THE KEY

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
