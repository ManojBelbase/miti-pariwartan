

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./lib",
    "declaration": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "rollup.config.ts"]
}